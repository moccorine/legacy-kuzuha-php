{% extends 'layout/base.twig' %}

{% block content %}
  <header>
    <span class="pagetitle">{{ BBSTITLE }}</span>
    - {{ TRANS_PASSWORD_SETTINGS_PAGE }}
  </header>
  <br />
  <form method="post" action="{{ CGIURL }}">
    <input type="hidden" name="m" value="ad" />
    <input type="hidden" name="ad" value="ps" />
    <input type="hidden" name="u" value="{{ U }}" />
    <input type="hidden" name="v" value="{{ V }}" />
    <div class="bbsmsg">
      {{ TRANS_PASSWORD_INSTRUCTION|raw }}
    </div>
    <br /><br />
    <table border="2" cellspacing="4">
      <tr>
        <td align="center">
          {{ TRANS_ADMIN_PASSWORD }}
        </td>
        <td align="center">
          <input size="30"
            type="text"
            name="ps"
            maxlength="127"
            value=""
            class="text" />
        </td>
      </tr>
    </table>
    <br /><br />
    <input type="submit" value="{{ TRANS_SET }}" class="btn" />
    <input type="reset" value="{{ TRANS_RESET }}" class="btn" />
  </form>
{% endblock %}
