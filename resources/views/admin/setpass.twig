{% extends 'layout/base.twig' %}

{% block content %}
  <header>
    <span class="pagetitle">{{ BBSTITLE }}</span>
    - Password settings page
  </header>
  <br />
  <form method="post" action="{{ CGIURL }}">
    <input type="hidden" name="m" value="ad" />
    <input type="hidden" name="ad" value="ps" />
    <input type="hidden" name="u" value="{{ U }}" />
    <input type="hidden" name="v" value="{{ V }}" />
    <div class="bbsmsg">
      Set your password.<br />
      Please enter the administrator password that you will use to administer the
      bulletin board from now on.<br />
      The password you enter here will be used for posting with the administrator's
      name, and for authenticating you when entering admin mode.
    </div>
    <br /><br />
    <table border="2" cellspacing="4">
      <tr>
        <td align="center">
          Admin password
        </td>
        <td align="center">
          <input size="30"
            type="text"
            name="ps"
            maxlength="127"
            value=""
            class="text" />
        </td>
      </tr>
    </table>
    <br /><br />
    <input type="submit" value="Set" class="btn" />
    <input type="reset" value="Reset" class="btn" />
  </form>
{% endblock %}
