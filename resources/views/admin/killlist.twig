{% extends 'layout/base.twig' %}

{% block content %}
  <header>
    <span class="pagetitle">
      <a href="{{ CGIURL }}" style="text-decoration: none;">{{ BBSTITLE }}</a>
    </span>
  </header>
  <h1>
    Message deletion mode
  </h1>
  <form method="post" action="{{ CGIURL }}">
    <input type="hidden" name="m" value="ad" />
    <input type="hidden" name="u" value="{{ U }}" />
    <input type="hidden" name="v" value="{{ V }}" />
    <a href="{{ DEFURL }}">Return</a>
    <input type="button"
      onclick="location.href='#bottom'"
      accesskey="B"
      value="▼"
      class="btn"
      title="Alt(+Shift)+B" />
  </form>
  <form method="post" action="{{ CGIURL }}">
    <input type="submit" value="　[!] Perform deletion　" class="btn" />
    <input type="hidden" name="m" value="ad" />
    <input type="hidden" name="ad" value="x" />
    <input type="hidden" name="u" value="{{ U }}" />
    <input type="hidden" name="v" value="{{ V }}" />
    <p>
      Please check the checkboxes of the posts you wish to delete, then click
      the [Perform deletion] button at the bottom.
    </p>
    <hr />
    <span class="medium">
      Delete - View - Date posted - Subject - Username - Contents (truncated)
    </span>
    <pre>
      {% for msg in messages %}
        <input type="checkbox" name="x[]" value="{{ msg.POSTID }}" />- <a href="{{
          CGIURL
          }}?m=f&amp;s={{ msg.POSTID }}"
          target="link">
          {{ msg.POSTID }}
        </a> - [{{ msg.WDATE }}] - {{ msg.TITLE }} - {{ msg.USER_NOTAG }} - {{ msg.MSGDIGEST }}
      {% endfor %}
    </pre>
    <hr />
    <input type="submit" value="　[!] Perform deletion　" class="btn" />
  </form>
  <form method="post" action="{{ CGIURL }}">
    <input type="hidden" name="m" value="ad" />
    <input type="hidden" name="u" value="{{ U }}" />
    <input type="hidden" name="v" value="{{ V }}" />
    <a href="{{ DEFURL }}">Return</a>
    <input type="button"
      onclick="location.href='#TOP'"
      accesskey="T"
      value="▲"
      class="btn"
      title="Alt(+Shift)+T" />
  </form>
{% endblock %}
